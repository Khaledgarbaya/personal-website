---
import BreadcrumbSchema from "./schemas/BreadcrumbSchema.astro";

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Always include home as the first item if not already present
const fullItems =
  items[0]?.url === "/"
    ? items
    : [{ name: "Home", url: "https://khaledgarbaya.net/" }, ...items];
---

<nav aria-label="Breadcrumb" class="mb-8">
  <ol
    class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400"
  >
    {
      fullItems.map((item, index) => (
        <li class="flex items-center">
          {index > 0 && (
            <svg
              class="w-4 h-4 mx-2"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"
              />
            </svg>
          )}
          {index === fullItems.length - 1 ? (
            <span
              class="font-medium text-gray-900 dark:text-gray-100"
              aria-current="page"
            >
              {item.name}
            </span>
          ) : (
            <a
              href={item.url}
              class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
            >
              {item.name}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<BreadcrumbSchema items={fullItems} />
