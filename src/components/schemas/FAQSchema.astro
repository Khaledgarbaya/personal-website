---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: [
    {
      "@type": "Question",
      name: question,
      acceptedAnswer: {
        "@type": "Answer",
        text: answer,
      },
    },
  ],
};
---

<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
